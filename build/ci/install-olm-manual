#!/usr/bin/env bash
set -e

eval $(minishift oc-env)

oc apply -f https://github.com/operator-framework/operator-lifecycle-manager/releases/download/0.13.0/crds.yaml
oc apply -f https://github.com/operator-framework/operator-lifecycle-manager/releases/download/0.13.0/olm.yaml


# wait for deployments to be ready
oc rollout status -w deployment/olm-operator --namespace=olm
oc rollout status -w deployment/catalog-operator --namespace=olm

sleep 60

oc rollout status -w deployment/packageserver --namespace=olm

