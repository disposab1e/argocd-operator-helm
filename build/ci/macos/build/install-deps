#!/usr/bin/env bash
set -e

# operator-courier
echo "======================================================"
echo "Installing operator-courier (latest version)"
echo "======================================================"
pip install operator-courier
operator-courier --version

# Operator SDK
echo "======================================================"
echo "Installing operator-sdk ${OPERATOR_SDK_VERSION}"
echo "======================================================"
curl -Lo operator-sdk https://github.com/operator-framework/operator-sdk/releases/download/${OPERATOR_SDK_VERSION}/operator-sdk-${OPERATOR_SDK_VERSION}-x86_64-apple-darwin
chmod +x operator-sdk
sudo mv operator-sdk /usr/local/bin/

# Helm 3
echo "======================================================"
echo "Installing Helm 3 (latest version)"
echo "======================================================"
curl https://raw.githubusercontent.com/helm/helm/master/scripts/get-helm-3 | bash
