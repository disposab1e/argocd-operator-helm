#!/usr/bin/env bash
set -e

if [ -z "${KUBERNETES_VERSION}" ]; then
    KUBE_VERSION=${KUBERNETES_VERSION}
else
    KUBE_VERSION=v1.14.0
fi

if [ -z "${MINIKUBE_VERSION}" ]; then
    MINI_VERSION=${MINIKUBE_VERSION}
else
    MINI_VERSION=v1.9.2
fi


# Install conntrack (mandatory for kubernetes 1.18)
echo "======================================================"
echo "Installing dependencies"
echo "======================================================"
sudo apt-get update 
sudo apt-get install -y conntrack

# Install kubectl
echo "======================================================"
echo "Installing kubectl ${KUBE_VERSION}"
echo "======================================================"
curl -Lo kubectl "https://storage.googleapis.com/kubernetes-release/release/${KUBE_VERSION}/bin/linux/amd64/kubectl"
chmod +x kubectl
sudo mv kubectl /usr/local/bin/

# Install Minikube
echo "======================================================"
echo "Installing minikube ${MINI_VERSION}"
echo "======================================================"
curl -Lo minikube https://github.com/kubernetes/minikube/releases/download/${MINI_VERSION}/minikube-linux-amd64
chmod +x minikube
sudo mv minikube /usr/local/bin/
